<?xml version="1.0" encoding="utf-8"?> 

<!DOCTYPE blog [

	<!ATTLIST blog
		n		CDATA	#REQUIRED
		author 	CDATA	#IMPLIED
	>

	<!ELEMENT blog (post*)>
	
	<!ELEMENT post ANY>
    <!ATTLIST post
        title  	CDATA	#REQUIRED
        date   	CDATA	#REQUIRED
        id     	ID    	#REQUIRED
        author	CDATA 	#REQUIRED
    >
]>

<!-- 	n deve essere incrementato ogni volta che viene inserito un
		post senza usare direttamente il modulo blog.
-->
<blog n="1" author="lost">
	<post id = "1" date = "6/04/2010 21:57" author = "lost" title = "First post">
		<![CDATA[
			This is my first post
		]]>
	</post>
</blog>
