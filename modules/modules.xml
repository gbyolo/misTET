<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE modules [
    <!ELEMENT modules (module*)>

    <!ELEMENT module (release+)>
    <!ATTLIST module
        name    CDATA   #REQUIRED
    >
    
    <!ELEMENT module (author+)>
    <!ATTLIST author
    	name		CDATA	#REQUIRED
    	email		CDATA	#IMPLIED
    	homepage	CDATA	#IMPLIED
    >
    
    <!ELEMENT release (description*)>
    <!ELEMENT description ANY>
    
    <!ELEMENT release (license+)>
    <!ELEMENT license ANY>
    <!ATTLIST license
    	href 	CDATA	#IMPLIED
    >

    <!ELEMENT release ANY>
    <!ATTLIST release
        version CDATA   #REQUIRED
        date    CDATA   #IMPLIED
    >
]>

